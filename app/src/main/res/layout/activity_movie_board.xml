<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieBoard.MovieBoardActivity"
    android:background="@color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:src="@drawable/splashscreen">

    </androidx.appcompat.widget.AppCompatImageView>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:textSize="@dimen/_30sdp"
            android:padding="@dimen/_20sdp"
            android:textAppearance="@style/textStyleHeadline3"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/tvSubtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgView"
            android:text="@string/unlimited_flims_tv_programmes_and_more"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:textAppearance="@style/textStyleBody2TertiaryGray1"
            app:layout_constraintTop_toBottomOf="@id/tvtitle"
            android:textSize="@dimen/_20sdp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
           app:layout_constraintStart_toStartOf="parent"
            android:padding="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/watch_anywhere_cancel_at_any_time" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_onboard_get_started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_32sdp"
            android:text="@string/get_started"
            android:textSize="@dimen/_16sdp"
            android:padding="@dimen/_10sdp"
            app:backgroundTint="#FF0000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

